@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Category</h1>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Cetegory</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width :100%">
    <thead>
        <tr class="text-center">
            <th>Category Name</th>
            <th>Diplay Order</th>
            <th>Actions</th>
        </tr>
      
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-info me-2"> <i class="bi bi-pencil-square"></i> &nbsp; Update</a>
                    <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> &nbsp; Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>