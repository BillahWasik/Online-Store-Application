@using Online_Store_Application.Areas.Admin.Models
@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="row justify-content-center">
    <div class="col-8 p-5 rounded border">
        <div class="row">
            <div class="col-6">
                <form asp-action="Delete" enctype="multipart/form-data" method="post">
            <h4 class="h-25">Delete Product</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" disabled class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" disabled class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" disabled class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="CategoryId" disabled class="dropdown-item" asp-items=ViewBag.Category>
                    <option disabled value="">--Select Category--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>

            </div>
            <div class="form-group mt-2">

                <input type="submit" value="Delete" class="btn btn-primary" />
                <a class="btn btn-danger text-white" asp-action="Index">Back to List</a>
            </div>
        </form>
            </div>
            <div class="col-6">
                <img src="/@Model.ImageUrl" alt="No Image" width="400" />
            </div>
        </div>
        
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
